set icons
set previewer '/home/nullboy/.config/lf/preview'
set cleaner '/home/nullboy/.config/lf/clean'

cmd mkdir $mkdir -p "$@"

map <enter> open
map . set hidden!
map g top
map a push :mkdir<space>""<left>
map V push :!nvim<space>
map D delete

map o ${{
    case $(file --mime-type -b "$f") in
        application/vnd.rar) zathura "$f" ;;
        *) lf -remote "send $id select \"$f\"" ;;
    esac
}}
