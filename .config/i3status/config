general {
    output_format = "i3bar"
    colors = true
    interval = 5
}

order += "wireless wlan0"
order += "memory"
order += "disk /"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "volume master"
order += "tztime local"
order += "battery 0"

disk "/" {
    format = "  %used / %total"
}

wireless wlan0 {
    format_up = "󰖩  %quality %essid"
    format_down = "󰤫  desconectado"
}

tztime local {
    format = "  %d-%m-%y -   %H:%M"
}

memory {
    format = "  %used / %total"
}

volume master {
    format = "  %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

battery 0 {
    format = "%status %percentage"
    path = "/sys/class/power_supply/BAT0/uevent"
    integer_battery_capacity = true
    last_full_capacity = true
}

cpu_temperature 0 {
    format = "󰔄 %degrees"
    path = "/sys/class/thermal/thermal_zone0/temp"
}

cpu_usage {
    format = "  %usage"
}
